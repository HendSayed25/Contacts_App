<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <TextView
        android:id="@+id/background_color"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/lightBlue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/background_color"
        app:layout_constraintBottom_toBottomOf="@id/background_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Add to Your Contacts"
        android:fontFamily="@font/chrustyrock_orla"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/background_color"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="33sp"
        android:text="Name"
        android:padding="20dp"
        android:fontFamily="@font/beckytahliamp6r"
        android:textStyle="bold"
        android:layout_marginTop="30dp"

        />

    <EditText
        android:id="@+id/user_name_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/background_color"
        app:layout_constraintStart_toEndOf="@id/user_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        android:textSize="31sp"
        tools:text="Hend sayed"
        android:fontFamily="@font/beckytahliamp6r"
        android:layout_marginTop="30dp"

        />
    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="31sp"
        android:text="Phone number"
        android:padding="20dp"
        android:fontFamily="@font/beckytahliamp6r"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/phone_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_name_edt"
        app:layout_constraintStart_toEndOf="@id/phone_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="phone"
        android:padding="20dp"
        android:textSize="25sp"
        tools:text="02574269854"
        android:fontFamily="@font/beckytahliamp6r"
        />

    <Button
        android:id="@+id/add_btn_to_database"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_tv"
        android:layout_margin="60dp"
        android:textSize="30sp"
        android:text="Add"
        android:fontFamily="@font/chrustyrock_orla"
        />


</androidx.constraintlayout.widget.ConstraintLayout>