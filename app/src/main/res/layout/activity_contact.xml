<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/background_color"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/lightBlue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/background_color"
        app:layout_constraintBottom_toBottomOf="@id/background_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Contact InFo"
        android:fontFamily="@font/chrustyrock_orla"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        />
    <ImageView
        android:id="@+id/picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/background_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/person"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/user_name_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Hend Sayed"
        android:textSize="24sp"
        android:layout_margin="20dp"
        android:textColor="@color/lightBlue"
        android:fontFamily="@font/beckytahliamp6r"
        />
    <TextView
        android:id="@+id/contactInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_name_contact"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Contact Info"
        android:textSize="24sp"
        android:layout_margin="20dp"
        android:fontFamily="@font/chrustyrock_orla"
        />
    <ImageView
        android:id="@+id/call_number"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/contactInfo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/phone"
        />
    <EditText
        android:id="@+id/phoneNumber_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contactInfo"
        app:layout_constraintStart_toEndOf="@id/call_number"
        tools:text="01279336697"
        android:textSize="25sp"
        android:inputType="phone"
        android:layout_margin="20dp"
        android:textColor="@color/lightBlue"
        android:fontFamily="@font/beckytahliamp6r"
        />
    <ImageView
        android:id="@+id/messsage_number"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/contactInfo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/message1"
        />

    <ImageView
        android:id="@+id/delete_contact"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/background_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:src="@drawable/delete"
        />
    <ImageView
        android:id="@+id/update_contact"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/background_color"
        app:layout_constraintEnd_toStartOf="@id/delete_contact"
        android:layout_margin="10dp"
        android:src="@drawable/edit"
        />
    <Button
        android:id="@+id/update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phoneNumber_contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/lightBlue"
        android:text="Update"
        android:layout_margin="60dp"
        android:textSize="25sp"
        android:fontFamily="@font/chrustyrock_orla"
        android:visibility="invisible"
        />






</androidx.constraintlayout.widget.ConstraintLayout>